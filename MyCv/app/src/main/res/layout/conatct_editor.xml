<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/header"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Contact Form"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:padding="8dp"
                            android:text="Address"
                            android:textSize="20sp">

                        </TextView>
                        <LinearLayout
                            android:layout_margin="12dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:inputType="phone"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/ic_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_Phone"
                                android:hint="Phone Number"
                                >

                            </EditText>
                            <EditText
                                android:inputType="textEmailAddress"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/ic_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_email"
                                android:hint="Email"
                                >

                            </EditText>
                            <EditText
                                android:inputType="textUri"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/purple_200"
                                android:drawableLeft="@drawable/ic_linkedin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_linkedin"
                                android:hint="Linkedin"
                                >

                            </EditText>
                            <EditText
                                android:inputType="textUri"

                                android:layout_margin="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/purple_200"
                                android:drawableLeft="@drawable/ic_github"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_github"
                                android:hint="Github"
                                >

                            </EditText>
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_margin="8dp"
                            android:background="@drawable/bag_but"
                            android:textColor="@color/white"
                            android:id="@+id/contact_save"
                            android:textAllCaps="false"
                            android:text="Save"
                            android:layout_gravity="center_horizontal"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="Cont_save">

                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
</ScrollView>